<div class="container my-5">
  <h2 class="text-center mb-4">Edit Class: <%= @afns_class.name %></h2>
  
  <% if @afns_class.errors.any? %>
    <div class="alert alert-danger rounded">
      <h4 class="alert-heading"><i class="fas fa-exclamation-circle"></i> There were errors with your submission:</h4>
      <ul class="mb-0">
        <% @afns_class.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @afns_class, url: afns_class_path(@afns_class), local: true do |f| %>
    <!-- Class Information Fields -->
    <div class="form-group mb-3">
      <%= f.label :name, "Class Name", class: "form-label fw-bold" %>
      <%= f.text_field :name, class: "form-control shadow-sm", placeholder: "Enter class name" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :instructor, "Instructor", class: "form-label fw-bold" %>
      <%= f.text_field :instructor, class: "form-control shadow-sm", placeholder: "Enter instructor name" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label :room, "Room", class: "form-label fw-bold" %>
      <%= f.select :room, AfnsClass::ROOMS.map { |room| [room[:name]] }, { prompt: "Select a Room" }, class: "form-select shadow-sm" %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :is_active, class: "form-check-input", id: "is_active" %>
      <%= f.label :is_active, "Active Status", class: "form-check-label fw-bold" %>
    </div>

    <div class="text-center mt-4">
      <%= f.submit "Save Class Info", class: "btn btn-primary px-4 me-2" %>
      <%= link_to 'Cancel', afns_classes_path, class: "btn btn-outline-secondary px-4" %>
    </div>
  <% end %>
</div>

<style>
  .form-label { color: #555; font-weight: 500; }
  .form-control, .form-select { border-radius: 8px; }

  .btn-primary { background-color: #007bff; border: none; }
  .btn-outline-secondary { border: 1px solid #6c757d; color: #6c757d; }
  .alert-danger {
    border-radius: 8px;
    font-size: 0.95em;
  }
</style>
