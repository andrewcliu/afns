 <div class="container my-4"> 


  <h1 class="text-center mb-4">Today's Classes</h1>

  <div class="row">
    <% @schedules.group_by(&:afns_class).each do |afns_class, schedules| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h2 class="card-title h5"><%= afns_class.name %></h2>
            <p class="card-subtitle text-muted mb-2"><strong>Instructor:</strong> <%= afns_class.instructor %></p>
            <p class="card-text"><strong>Room:</strong> <%= afns_class.room %></p>

            <h3 class="h6 mt-4">Today's Schedule</h3>
            <ul class="list-group list-group-flush">
              <% schedules.each do |schedule| %>
                <% attendance = schedule.afns_class_attendances.find_by(attendance_date: Date.today) %>
                
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong>Start:</strong> <%= schedule.start_time.strftime("%I:%M %p") %> - 
                    <strong>End:</strong> <%= schedule.end_time.strftime("%I:%M %p") %>
                  </div>
                  
                  <% if attendance.present? %>
                    <!-- Display attendance count and edit button if attendance exists -->
                    <div class="d-flex align-items-center">
                      <span class="badge bg-secondary me-2">Attendance: <%= attendance.attendance_count %></span>
                      <%= link_to "Edit Attendance", edit_afns_class_schedule_afns_class_attendance_path(schedule, attendance), class: "btn btn-outline-primary btn-sm" %>
                    </div>
                  <% else %>
                    <!-- Show "View & Record Attendance" button if no attendance has been recorded -->
                    <%= link_to "View & Record Attendance", show_with_attendance_afns_class_schedule_path(schedule), class: "btn btn-primary btn-sm" %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr>


  <!-- Class Table -->
  <div class="table-responsive mb-5 d-print-none">
    <table class="table table-bordered table-hover table-sm">
      <thead class="table-light">
        <tr>
          <th>Class Name</th>
          <th>Instructor</th>
          <th>Room</th>
          <th>Active?</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% AfnsClass.all.each do |f| %>
          <tr>
            <td><%= f.name %></td>
            <td><%= f.instructor %></td>
            <td><%= f.room %></td>
            <td>
              <% if f.is_active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-danger">Inactive</span>
              <% end %>
            </td>
            <td>
              <%= link_to 'Manage Schedule', new_afns_class_schedule_path(afns_class_id: f.id), class: "btn btn-info btn-sm me-2" %>
              <% if f.schedules.present? %>
                <%= link_to 'Edit', edit_afns_class_path(f.id), class: "btn btn-warning btn-sm me-2" %>
                <%= link_to 'Show Schedule', afns_class_path(f.id), class: "btn btn-secondary btn-sm" %>
              <% end %>
              <%= link_to 'Delete', afns_class_path(f.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm me-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'Add New Classes', new_afns_class_path, class: "btn btn-primary d-print-none" %>
  </div>
</div>
