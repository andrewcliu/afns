<!-- app/views/members/index.html.erb -->
<div class="container my-4">
  <h1 class="text-center mb-4">Members</h1>

  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Membership Number</th>
          <th>Date Joined</th>
          <th>Active Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @members.each do |member| %>
          <tr>
            <td><%= member.name %></td>
            <td><%= member.email %></td>
            <td><%= member.membership_number %></td>
            <td><%= member.date_join.strftime("%B %d, %Y") if member.date_join %></td>
            <td>
              <% if member.is_active %>
                <span class="badge bg-success">Active</span>
              <% else %>
                <span class="badge bg-danger">Inactive</span>
              <% end %>
            </td>
            <td>
              <%= link_to 'Show', member_path(member), class: "btn btn-info btn-sm me-2" %>
              <%= link_to 'Edit', edit_member_path(member), class: "btn btn-warning btn-sm me-2" %>
              <%= link_to 'Delete', member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Add New Member', new_member_path, class: "btn btn-primary" %>
  </div>
</div>
