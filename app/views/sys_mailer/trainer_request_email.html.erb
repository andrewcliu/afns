<!DOCTYPE html>
<html>
  <head>
    <style>
      body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #f9f9f9;
      }
      h1 {
        color: #0056b3;
        text-align: center;
      }
      .info-section {
        margin-bottom: 15px;
      }
      .label {
        font-weight: bold;
      }
      .value {
        margin-top: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>New Trainer Form Submission</h1>

      <div class="info-section">
        <p class="label">Name:</p>
        <p class="value"><%= @trainer_form.name %></p>
      </div>

      <div class="info-section">
        <p class="label">Membership Number:</p>
        <p class="value"><%= @trainer_form.membership_number %></p>
      </div>

      <div class="info-section">
        <p class="label">Date of Birth:</p>
        <p class="value"><%= @trainer_form.date_of_birth %></p>
      </div>

      <div class="info-section">
        <p class="label">Phone:</p>
        <p class="value"><%= @trainer_form.phone %></p>
      </div>

      <div class="info-section">
        <p class="label">Reasons for Joining:</p>
        <p class="value"><%= @trainer_form.reasons %></p>
      </div>

      <div class="info-section">
        <p class="label">Medical Conditions:</p>
        <p class="value"><%= @trainer_form.medical_conditions.present? ? @trainer_form.medical_conditions : "None" %></p>
      </div>

      <div class="info-section">
        <p class="label">Additional Notes:</p>
        <p class="value"><%= @trainer_form.additional_notes.present? ? @trainer_form.additional_notes : "None" %></p>
      </div>
    </div>
  </body>
</html>
