
<%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" %>

<h1 class="text-center mb-4">Locker Management</h1>

<div class="mb-4 text-center">
  <%= link_to 'New Men’s Locker', new_men_lockers_path, class: 'btn btn-primary me-2' %>
  <%= link_to 'New Women’s Locker', new_women_lockers_path, class: 'btn btn-primary' %>
</div>

<div class="container mt-3">
  <ul class="nav nav-tabs" id="lockerTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="male-lockers-tab" data-bs-toggle="tab" data-bs-target="#male-lockers" type="button" role="tab" aria-controls="male-lockers" aria-selected="true">Male Lockers</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="female-lockers-tab" data-bs-toggle="tab" data-bs-target="#female-lockers" type="button" role="tab" aria-controls="female-lockers" aria-selected="false">Female Lockers</button>
    </li>
  </ul>
  <div class="tab-content" id="lockerTabsContent">
    <!-- Male Lockers Tab Pane -->
    <div class="tab-pane fade show active" id="male-lockers" role="tabpanel" aria-labelledby="male-lockers-tab">
      <h3 class="mt-3">Men’s Lockers</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-sm">
          <thead class="table-light">
            <tr>
              <th>Locker Number</th>
              <th>First Name</th>
              <th>Key Tag Number</th>
              <th>Receipt Number</th>

              <th>Expiration Date</th>
              <th>Staff Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @male_lockers.each do |locker| %>
              <tr>
                <td><%= locker.locker_number %></td>
                <td><%= locker.first_name %></td>
                <td><%= locker.key_tag_number %></td>
                <td><%= locker.receipt_number %></td>

                <td><%= locker.expiration_date %></td>
                <td><%= locker.staff_name %></td>
                <td>
                  <%= link_to 'Show', locker_path(locker), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Edit', edit_men_locker_path(locker), class: 'btn btn-warning btn-sm' %>
                  <%= link_to 'Delete', locker_path(locker), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Female Lockers Tab Pane -->
    <div class="tab-pane fade" id="female-lockers" role="tabpanel" aria-labelledby="female-lockers-tab">
      <h3 class="mt-3">Women’s Lockers</h3>
      <div class="table-responsive">
        <table class="table table-bordered table-hover table-sm">
          <thead class="table-light">
            <tr>
              <th>Locker Number</th>
              <th>First Name</th>
              <th>Key Tag Number</th>
              <th>Receipt Number</th>
              <th>Expiration Date</th>
              <th>Staff Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @female_lockers.each do |locker| %>
              <tr>
                <td><%= locker.locker_number %></td>
                <td><%= locker.first_name %></td>
                <td><%= locker.key_tag_number %></td>
                <td><%= locker.receipt_number %></td>
                <td><%= locker.expiration_date %></td>
                <td><%= locker.staff_name %></td>
                <td>
                  <%= link_to 'Show', locker_path(locker), class: 'btn btn-info btn-sm' %>
                  <%= link_to 'Edit', edit_women_locker_path(locker), class: 'btn btn-warning btn-sm' %>
                  <%= link_to 'Delete', locker_path(locker), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
