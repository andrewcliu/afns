<div class="mt-5">
  <h1 class="text-center mb-4">Guest Agreements</h1>

  <table class="table table-striped table-bordered shadow-lg">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>

        <th>Is Guest Pass</th>
        <th>Has Paid</th>
        <th>Has Toured</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @guest_agreements.each do |agreement| %>
        <tr>
          <td><%= agreement.name %></td>
          <td><%= agreement.email %></td>
          <td><%= agreement.phone %></td>

          <!-- Checkmark/X for boolean fields -->
          <td><%= agreement.is_guest_pass ? '✓' : '-' %></td>
          <td><%= agreement.has_paid ? '✓' : '-' %></td>
          <td><%= agreement.has_toured ? '✓' : '-' %></td>

          <td><%= agreement.created_at.strftime("%B %d, %Y") %></td>
          <td>
            <%= link_to 'Show', guest_agreement_path(agreement), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_guest_agreement_path(agreement), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', guest_agreement_path(agreement), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-4">
    <%= link_to 'New Guest Agreement', root_path, class: 'btn btn-success' %>
  </div>
</div>

<style>
  .table {
    border-radius: 8px;
  }
  
  .btn {
    margin-right: 5px;
  }

  h1 {
    font-weight: 700;
    color: #333;
  }

  /* Style for checkmark/X */
  td {
    font-size: 1.2em;
    text-align: center;
  }
</style>
