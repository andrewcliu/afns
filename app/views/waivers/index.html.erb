<div class="container mt-5">
  <h1 class="text-center mb-4">Waivers</h1>

  <table class="table table-striped table-bordered shadow-lg">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Class</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @waivers.each do |waiver| %>
        <tr>
          <td><%= waiver.id %></td>
          <td><%= waiver.first_name %></td>
          <td><%= waiver.last_name %></td>
          <td><%= waiver.phone %></td>
          <td><%= waiver.email %></td>
          <td><%= AfnsClass.find(waiver.afns_class_id).name %></td>
          <td><%= waiver.created_at.strftime("%B %d, %Y") %></td>
          <td>
            <%= link_to 'Show', waiver_path(waiver), class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_waiver_path(waiver), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', waiver_path(waiver), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-4">
    <%= link_to 'New Waiver', new_waiver_path, class: 'btn btn-success' %>
  </div>
</div>

<style>
  .table {
    border-radius: 8px;
  }

  .btn {
    margin-right: 5px;
  }

  h1 {
    font-weight: 700;
    color: #333;
  }
</style>
