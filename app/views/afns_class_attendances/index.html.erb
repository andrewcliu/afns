<!-- app/views/afns_class_attendances/index.html.erb -->
<h1>Attendance Records for <%= @afns_class_schedule.day_of_week %> Class</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Attendance Count</th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.attendance_date %></td>
        <td><%= attendance.attendance_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

